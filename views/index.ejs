<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Smart TODO List</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <script src="https://kit.fontawesome.com/528841148f.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script defer type="text/javascript" src="/scripts/modify-item.js"></script>

    <!-- Character Count JS -->
    <script type="text/javascript" src="/scripts/char-counter.js"></script>
    <!-- boostrap cdn for js-->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </head>

  <body>
    <div class='body-container'>
      <%- include('partials/_header') %>
      <main>
        <header>
          <h2>Let's get to sorting!</h2>
          <form class="item" action="/items/" method="POST">
            <span class="empty-cont"></span>
            <div class="form-group">
              <input autocomplete='off'  class="form-control" type="text" name="item">
              <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i></button>
            </div>
            <span id="input-counter">99</span>
          </form>
          <div class="pending">
            <ul></ul>
          </div>
        </header>

        <form class="list-switcher">
          <select name="lists">
            <option value="1">watch</option>
            <option value="2">eat</option>
            <option value="3">read</option>
            <option value="4">buy</option>
            <option value="5" selected="selected">general</option>
          </select>
        </form>

        <div class="lists-container">
          <div class="list-card id-1">
            <h3>Watch</h3>
            <ul class="todo-list"></ul>
            <div class="completed-list">
              <div class="completed-title">
                <span class="empty-cont2"></span>
                <h3>Done</h3>
                <i class="fas fa-chevron-down"></i>
              </div>
              <ul class='done-list'></ul>
            </div>
          </div>
          <div class="list-card id-2">
            <h3>Eat</h3>
            <ul class="todo-list"></ul>
            <div class="completed-list">
              <div class="completed-title">
                <span class="empty-cont2"></span>
                <h3>Done</h3>
                <i class="fas fa-chevron-down"></i>
              </div>
              <ul class='done-list'></ul>
            </div>
          </div>
          <div class="list-card id-3">
            <h3>Read</h3>
            <ul class="todo-list"></ul>
            <div class="completed-list">
              <div class="completed-title">
                <span class="empty-cont2"></span>
                <h3>Done</h3>
                <i class="fas fa-chevron-down"></i>
              </div>
              <ul class='done-list'></ul>
            </div>
          </div>
          <div class="list-card id-4">
            <h3>Buy</h3>
            <ul class="todo-list"></ul>
            <div class="completed-list">
              <div class="completed-title">
                <span class="empty-cont2"></span>
                <h3>Done</h3>
                <i class="fas fa-chevron-down"></i>
              </div>
              <ul class='done-list'></ul>
            </div>
          </div>
          <div class="list-card id-5">
            <h3>General</h3>
            <ul class="todo-list"></ul>
            <div class="completed-list">
              <div class="completed-title">
                <span class="empty-cont2"></span>
                <h3>Done</h3>
                <i class="fas fa-chevron-down"></i>
              </div>
              <ul class='done-list'></ul>
            </div>
          </div>
        </div>
      </main>
      <%- include('partials/_footer') %>
    </div>


  </body>
</html>

